<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10mm"
        android:text="  Bhopal Coders Community VIPs "
        android:textSize="7mm"
        android:textStyle="bold" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email address : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mail"
                android:textSize="3mm"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name * : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age* : "
                android:textSize="4mm"
                android:textStyle="bold" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/age"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2mm"
                android:text="College/Organization * : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/clg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year Of Study * : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:entries="@array/year" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number * : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/ans" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender * : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="3mm" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="3mm" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="3mm" />
            </RadioGroup>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your Area of Expertise? * : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reaching Out(Companies/College)"
                android:textSize="3mm" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designing"
                android:textSize="3mm" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marketing"
                android:textSize="3mm" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Writing"
                android:textSize="3mm" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programming"
                android:textSize="3mm" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Management"
                android:textSize="3mm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technology you are good at? * :"
                android:textSize="4mm"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/py"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Javascript"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/react"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="React"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/an"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angular"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/html"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTML + CSS"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/php"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHP"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/njs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Node.js"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/sql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SQL/NoSQL"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C#"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="3mm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specialization you are working in? * :"
                android:textSize="4mm"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Development"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Development"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/ds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Science / ML / DL"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/bc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blockchain"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloud Computing"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/devops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DevOps"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/qc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantum Computing"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/cp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competitive Programming"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Development"
                android:textSize="3mm" />

            <CheckBox
                android:id="@+id/cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cybersecurity"
                android:textSize="3mm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Linkedin Profile"
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Facebook Profile"
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your GitHub Profile"
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link to your Resume : "
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why do you want to join VIP Programme,and to be a Volunteer ? *"
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic"
                android:id="@+id/vip"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share your past experience which you have worked along side a community? *"
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic"
                android:id="@+id/ex"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anything you'd like to tell us about you ?"
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of the person who referred you for this? "
                android:textSize="4mm"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ans"
                android:textSize="3mm"
                android:textStyle="italic" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/consent"
                android:textStyle="bold"
                android:textSize="3mm"
                android:text="You agree with all terms and conditions !!"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textSize="4mm"
            android:textStyle="bold"
            android:id="@+id/sub"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>